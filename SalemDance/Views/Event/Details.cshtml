        <dt>
            
        </dt>

        <dd>
            <table>
                <tr>
                    @{
                        int cnt = 0;
                        List<SalemDance.ViewModels.DaysWithEventData> days = ViewBag.DaysOpen;

                        foreach (var entry in days)
                        {
                            if (cnt++ % 1 == 0)
                            {
                                @:</tr><tr>
                                }
                                @:<td>
                                    <input type="checkbox"
                                           disabled="disabled"
                                           name="selectedDays"
                                           value=@entry.DayID
                                           @(Html.Raw(entry.Assigned ? "checked=\"checked\"" : "")) />
                                    @entry.DayOpen.ToString()
                                    @:</td>
                        }
                        @:</tr>
                    }
                </table>

        </dd>

